<div class="row">
  <div class=" col-md-12">
    <div class="row">
      <div class="col-md-6">
	<h1>New Invoice</h1>
      </div>
      <div class="col-md-6 margin-top-10 text-right">
	{{link-to "cancel" "invoices"}}
	<a href="#" {{action "save"}} class="massive massive-button ui button">Save</a>
	<a href="#" {{action "send"}} class="massive positive massive-button ui button">Send</a>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-md-12">
	<div class="row">
	  <div class="col-md-4">
	    <div class="ui card">
	      <div class="content">
		<div class="header">Customer</div>
	      </div>
	      <div class="content">
		<h4 class="ui sub header">
		  <a href="#">
		    TCI
		  </a>
		</h4>
		<div class="ui small feed">
		  <div class="event">
		    <div class="content">
		      <div class="summary">
			<address>
			  <a href="#">ap@tci.com</a><br/>
			  1234 Anywhere St.<br/>
			  Tampa, FL 33601<br/>
			</address>
		      </div>
		    </div>
		  </div>
		</div>
	      </div>
	      <div class="extra content text-right">
		<button class="ui button">Change Customer</button>
	      </div>
	    </div>
	  </div>
	  <div class="col-md-offset-4 col-md-4">
	    <div class="ui card">
	      <div class="content">
		<div class="header">Invoice #</div>
	      </div>
	      <div class="content">
		<div class="ui small feed">
		  <div class="event">
		    <div class="content">
		      <div class="summary">
			{{input class="form-control"}}
		      </div>
		    </div>
		  </div>
		</div>
	      </div>
	      <div class="content">
		<div class="header">Due</div>
	      </div>
	      <div class="content">
		<div class="ui small feed">
		  <div class="event">
		    <div class="content">
		      <div class="summary">
			{{input class="form-control"}}
		      </div>
		    </div>
		  </div>
		</div>
	      </div>


	      <div class="content">
		<div class="header">Total</div>
	      </div>
	      <div class="content">
		<div class="ui small feed">
		  <div class="event">
		    <div class="content">
		      <div class="summary">
			<h4 class="ui sub header">$5,000.00</h4>
		      </div>
		    </div>
		  </div>
		</div>
	      </div>
	    </div>
	  </div>
	</div>
	<div class="row">
	  <div class="col-md-12">
	    <h4>Notes</h4>
	    {{textarea rows=5 class="form-control"}}
	  </div>
	</div>
	<hr>
	<div class="row">
	  <div class="col-md-12">
	    <table class="table table-condensed">
	      <thead>
	        <tr>
	          <th>
		    Item
		  </th>
	          <th>Rate</th>
	          <th>Qty</th>
	          <th>Total</th>
	        </tr>
	      </thead>
	      <tbody>
	        <tr>
	          <td>
		    {{input class="form-control"}}
		  </td>
	          <td>
		    {{input value=5000 class="form-control"}}
		  </td>
		  <td>
		    {{input value=1 class="form-control"}}
		  </td>
	          <td>
		    $5000.00
		  </td>
	        </tr>
		<tr>
		  <td colspan="4">
		    {{textarea class="form-control" placeholder="Additional description"}}
		  </td>
		</tr>
	      </tbody>
	    </table>
	    <button class="ui button massive primary">Add Line Item</button>
	  </div>
	</div>

      </div>
    </div>
  </div>
</div>
