<h2>{{status}}</h2>
<table class="table table-condensed">
	<thead>
		<tr>
			<th>
				Invoice #
			</th>
			<th>
				Customer
			</th>
			<th>
				Amount
			</th>
			<th>
				Date
			</th>
			<th>
			</th>
		</tr>
	</thead>
	<tbody>
		{{#each invoices as |invoice|}}
			<tr>
				<td>{{invoice.number}}</td>
				<td>{{invoice.customer}}</td>
				<td>{{invoice.amount}}</td>
				<td>{{invoice.date}}</td>
				<td><a href="#">View Invoice</a></td>
			</tr>
		{{/each}}
	</tbody>
</table>
