      $40,000
    </div>
    <div class="label">
      paid last 30 days
    </div>
  {{/link-to}}
  {{#link-to invoicesRoute (query-params status="outstanding") tagName="div" class="statistic statistic-link"}}
    <div class="value">
      $55,000
    </div>
    <div class="label">
      outstanding
    </div>
  {{/link-to}}
  {{#link-to invoicesRoute (query-params status="draft") tagName="div" class="statistic statistic-link"}}
    <div class="value">
      $10,000
    </div>
    <div class="label">
      in draft
    </div>
  {{/link-to}}
  {{#link-to invoicesRoute (query-params status="overdue") tagName="div" class="statistic statistic-link"}}
